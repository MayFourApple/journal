<table>
  <thead>
    <th>ID</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.title%></td>
        <td><%= category.description%></td>
        <td>
          <%= link_to 'Task', category_path(category) %>
        </td>
      <tr>
    <% end %>
  </tbody>

</table>

<%= link_to 'New Category', new_category_path %>