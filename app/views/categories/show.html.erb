<div>
  User: <%= current_user.email %>
  Title: <%= @category.title %>
</div>
<div>
  Description: <%= @category.description %>
</div>
<table>
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
    <th></th>
  </thead>
  <tbody>
    <% @category.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.date %></td>
        <td>
          <%= link_to 'Show', category_task_path(@category, task) %>
          <%= link_to 'Delete', category_task_path(@category, task), data: { 'turbo-confirm': 'Are you sure you want to delete this task?', 'turbo-method': :delete } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= link_to 'New', new_category_task_path(@category) %>
</div>